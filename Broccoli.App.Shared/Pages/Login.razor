@page "/login"
@layout LoginLayout
@using Broccoli.App.Shared.Services
@using Broccoli.App.Shared.Layout
@inject IAuthenticationService AuthService
@inject IAuthenticationStateService AuthStateService
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h2>@(isNewUser ? "Create Account" : "Welcome Back")</h2>
        
        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="alert alert-success" role="alert">
                @successMessage
            </div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" 
                          class="form-control" 
                          @bind-Value="loginModel.Username" 
                          placeholder="Enter username"
                          disabled="@isProcessing" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" 
                          type="password" 
                          class="form-control" 
                          @bind-Value="loginModel.Password" 
                          placeholder="Enter password"
                          disabled="@isProcessing" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary btn-block" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Processing...</span>
                }
                else
                {
                    @(isNewUser ? "Create Account" : "Login")
                }
            </button>
        </EditForm>

        @if (!isNewUser)
        {
            <p class="mt-3 text-center">
                New user? Your account will be created automatically on first login.
            </p>
        }
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isProcessing;
    private bool isNewUser;

    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // If already authenticated, redirect
        if (AuthStateService.IsAuthenticated)
        {
            NavigateToReturnUrl();
        }

        // Load last logged in username
        if (!string.IsNullOrWhiteSpace(AuthStateService.CurrentUsername))
        {
            loginModel.Username = AuthStateService.CurrentUsername;
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        successMessage = null;
        isProcessing = true;

        try
        {
            // Try to login first
            var loginResult = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);

            if (loginResult.Success)
            {
                await AuthStateService.LoginAsync(loginResult.User!);
                successMessage = "Login successful! Redirecting...";
                await Task.Delay(500); // Brief delay to show success message
                NavigateToReturnUrl();
            }
            else if (loginResult.Message == "UserNotFound")
            {
                // User doesn't exist, create new account
                isNewUser = true;
                var registerResult = await AuthService.RegisterAsync(loginModel.Username, loginModel.Password);

                if (registerResult.Success)
                {
                    await AuthStateService.LoginAsync(registerResult.User!);
                    successMessage = "Account created successfully! Redirecting...";
                    await Task.Delay(500);
                    NavigateToReturnUrl();
                }
                else
                {
                    errorMessage = registerResult.Message;
                }
            }
            else
            {
                // Password incorrect or other error
                errorMessage = loginResult.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void NavigateToReturnUrl()
    {
        var url = string.IsNullOrWhiteSpace(ReturnUrl) ? "/" : ReturnUrl;
        Navigation.NavigateTo(url); // Removed forceLoad - let Blazor handle navigation
    }

    public class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Username is required")]
        [System.ComponentModel.DataAnnotations.MinLength(3, ErrorMessage = "Username must be at least 3 characters")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }
}
